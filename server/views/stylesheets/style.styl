#map-area
  height 400px

#information-banner
  float right

#navigation-area
  display inline-block
  .navigation-item
    cursor pointer
    span
      display: block
      background #eee
      padding 3px 6px
      border-radius 5px
      box-shadow 1px 1px 5px 0 #d0d0d0
      border 1px solid #cccccc
      text-decoration none
  .navigation-item.selected span
    background wheat
    font-weight bold
    -webkit-transform scale(1.05)
    -moz-transform: scale(1.05);
    -o-transform: scale(1.05);
    -ms-transform: scale(1.05);
    transform: scale(1.05);

.message-box
  border 1px solid #cccccc
  em
    text-shadow 0 1px 0 #fff
    color #999
  p
    padding 0
    margin 0
    font 12px Helvetica, Arial
    padding 5px 10px
    b
      display inline-block
      padding 0 10px
  p:nth-child(even)
    background #eee
  #lines
    height 300px
    overflow auto
    overflow-x hidden
    overflow-y auto
    border-bottom-right-radius 3px
    border-bottom-left-radius 3px


#message-form
  padding 0.5em
  textarea
    width 680px
    resize none
    border none
    box-shadow 0px 0px 4px grey
    height 30px
    padding 5px 10px
    margin 0 5px 0 0
    vertical-align middle
    &:focus
      outline 0
  button
    width 70px
    height 40px
    vertical-align middle

